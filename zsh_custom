setdate() {
    if [ $# -ne 2 ]; then
        echo "Usage: setdate \"MM/DD/YYYY HH:MM:SS\" \"filename\""
        echo "Example: setdate \"05/26/2026 00:00:00\" \"myfile.pdf\""
        return 1
    fi
    SetFile -d "$1" "$2"
}

