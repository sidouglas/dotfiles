{
  "agent": {
    "play_sound_when_agent_done": true,
    "inline_assistant_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4"
    },
    "always_allow_tool_actions": true,
    "default_model": {
      "model": "claude-sonnet-4",
      "provider": "zed.dev"
    },
    "model_parameters": [],
    "version": "2"
  },
  "base_keymap": "VSCode",
  "buffer_font_family": "Hack Nerd Font Mono",
  "buffer_font_size": 14,
  "chat_panel": {
    "dock": "right"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "features": {
    "copilot": false,
    "edit_prediction_provider": "zed"
  },
  "file_scan_exclusions": [
    "**/.DS_Store",
    "**/.classpath",
    "**/.git",
    "**/.hg",
    "**/.husky",
    "**/.next",
    "**/.nyc_output",
    "**/.settings",
    "**/.storybook",
    "**/.svn",
    "**/.tap",
    "**/.turbo",
    "**/.vscode",
    "**/.vscode-test",
    "**/CVS",
    "**/Thumbs.db",
    "**/dist",
    "**/node_modules",
    "**/out",
    "**/report"
  ],
  "format_on_save": "prettier",
  "formatter": "language_server",
  "indent_guides": {
    "coloring": "indent_aware",
    "enabled": true
  },
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": "language_server"
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "formatter": "language_server"
    }
  },
  "linked_edits": true,
  "notification_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "project_panel": {
    "auto_fold_dirs": false,
    "auto_reveal_entries": true,
    "button": true,
    "default_width": 300,
    "dock": "right",
    "entry_spacing": "comfortable",
    "file_icons": true,
    "folder_icons": true,
    "git_status": true,
    "indent_guides": {
      "show": "always"
    },
    "indent_size": 2,
    "scrollbar": {
      "git_diff": true,
      "show": "never"
    }
  },
  "relative_line_numbers": true,
  "scrollbar": {
    "git_diff": true,
    "show": "never"
  },
  "tasks": {
    "test_at_cursor": {
      "args": [
        "${selection}"
      ],
      "command": "npm test -- --testNamePattern",
      "cwd": "${workspaceFolder}",
      "label": "Test at cursor"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "terminal": {
    "program": "zsh"
  },
  "theme": {
    "dark": "Ayu Dark",
    "light": "One Light",
    "mode": "system"
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },
  "ui_font_family": "Hack Nerd Font Mono",
  "ui_font_size": 14,
  "vim": {
    "automatic_mode_switching": {
      "pane_focus": "normal"
    },
    "enable_vim_sneak": true,
    "use_multiline_find": true,
    "use_system_clipboard": "always"
  },
  "vim_mode": true,
  "wrap_guides": [
    90
  ]
}
